@model IEnumerable<ToHMVC.Models.HeroIndexVM>

@{
    ViewData["Title"] = "Create Hero";
}

<h1>Welcome to my stable of Heroes!</h1>

<p>
    <a asp-action="Create">Add a hero to the stable</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeroName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ElementType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HeroName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElementType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HP)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { name=item.HeroName }) |
                @Html.ActionLink("Details", "Details", new {  name=item.HeroName }) |
                @Html.ActionLink("Delete", "Delete", new { name = item.HeroName })
            </td>
            <!--An actionlnk returns an anchor element that contains a url path to the specified action.
                helps create links that correspond to actions in controllers-->
        </tr>
}
    </tbody>
</table>
